<?xml version="1.0" encoding="utf-8"?>

<Window xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="TrainScheduler.AddWindow"
        xmlns:controls="clr-namespace:TrainScheduler.Controls"
        xmlns:viewModel="clr-namespace:TrainScheduler.ViewModel"
        x:DataType="viewModel:AddWindowViewModel"
        Title="AddWindow" Height="600" Width="350">


    <ContentPage>
        <Grid>
            <controls:EntriesForTrainDataControl Padding="10" />
            <Button Text="Add" HeightRequest="40" VerticalOptions="End" Command="{Binding AddTrainCommand}" />
        </Grid>
    </ContentPage>


</Window>