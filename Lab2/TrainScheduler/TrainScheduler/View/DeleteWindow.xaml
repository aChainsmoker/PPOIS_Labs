<?xml version="1.0" encoding="utf-8" ?>
<Window xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainScheduler.DeleteWindow"
             xmlns:controls="clr-namespace:TrainScheduler.Controls"
             xmlns:viewModel="clr-namespace:TrainScheduler.ViewModel"
             x:DataType="viewModel:DeleteWindowViewModel"
             Title="DeleteWindow" Height="800" Width="450">

    <ContentPage>
        <Grid>
            <controls:SelectableEntriesForTrainDataConrol Padding="10"/>
            <Button Text="Delete" HeightRequest="40" VerticalOptions="End" Command="{Binding DeleteTrainsCommand}"/>
        </Grid>
    </ContentPage>
</Window>